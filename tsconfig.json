{
  "compilerOptions": {
    "target": "ES2016",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "lib": ["ESNext","DOM"],
    "baseUrl": ".",
    "paths": {
      "@mini-vue/*": ["packages/*/src"]
    }
  },
  "include": [
    "packages/*/src",
    "packages/*/__tests__"
  ]
}